{
  "env": {
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "wx": false,
    "sharedCanvas": false,
    "console": false,
    "setTimeout": false,
    "cancelAnimationFrame": false,
    "requestAnimationFrame": false
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "destructuring": true,
      "experimentalObjectRestSpread": true,
      "spread": true
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-console": [
      "off"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
